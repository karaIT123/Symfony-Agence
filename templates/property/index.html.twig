{% extends 'base.html.twig' %}

{% block title 'Nos Biens' %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            {{ form_start(form) }}
            <div class="form-row">
                <div class="col-md-5">
                    {{ form_row(form.minSurface) }}
                </div>
                <div class="col-md-5">
                    {{ form_row(form.maxPrice) }}
                </div>
                <div class="col-md-2">
                   <button class="btn btn-secondary"  style="width:100%;">Rechercher</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    <div class="container mt-4">
        <h1>Nos biens</h1>
        <div class="row">
            {% for property in properties %}
                <div class="col-md-4">
                    {{ include('property/_index.html.twig') }}
                </div>
            {% endfor %}
        </div>

        <div style="width: 50%; margin-left: auto; margin-right: auto;">
            {{ knp_pagination_render(properties) }}
        </div>
    </div>

{% endblock %}
